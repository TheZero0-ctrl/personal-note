<% provide(:title, "Log in") %>
<div class="flex items-center justify-center min-h-screen bg-[#F4F5F9]">
        <!-- card container -->
        <div class="flex flex-col m-6 space-y-10 bg-[#FAFBFC] shadow-2xl rounded-2xl md:flex-row md:space-y-0 md:m-0">
            <!-- left side -->
            <div class="p-6 md:p-20">
                <h2 class="font-mono mb-5 text-4xl font-bold">Log In</h2>
                <p class="max-w-sm mb-12 font-sans font-light text-gray-600">
                    Log in to your account to create notes
                </p>
                <div>
                  <%= form_for(resource, as: resource_name, url: session_path(resource_name), data: {turbo:false}) do |f| %>
                    <div class="field">
                      <%= f.email_field :email, autofocus: true, autocomplete: "email", class:"w-full p-6 border
                        border-gray-300 rounded-sm placeholder:font-sans placeholder:font-light mb-4", placeholder:"Enter your email address" %>
                    </div>

                    <div class="field">
                      <%= f.password_field :password, autocomplete: "current-password", class:"w-full p-6 border
                        border-gray-300 rounded-sm placeholder:font-sans placeholder:font-light mb-4", placeholder:"Enter your Password" %>
                    </div>

                    <% if devise_mapping.rememberable? %>
                      <div class="field">
                        <%= f.check_box :remember_me, class:"font-light text-gray-600" %>
                        <%= f.label :remember_me, class:"font-sans font-light text-gray-600" %>
                      </div>
                    <% end %>

                    <div class="actions mt-4">
                      <%= f.submit "Log in", class:"w-full md:w-auto flex items-center justify-center p-6 space-x-4 font-sans text-white rounded-md
                        px-9 bg-[#F04C55] shadow-cyan-100 hover:bg-opacity-90 shadow-sm hover:shadow-lg border transition hover:-translate-y-0.5 duration-150" %>
                    </div>
                  <% end %>
                </div>
            </div>

            <!-- right side -->
            <%= image_tag 'image.jpg',  class: "w-[430px] hidden md:block"%>
        </div>
    </div>

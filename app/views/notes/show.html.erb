<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @note %>

    <%= link_to 'Edit this note', edit_note_path(@note), class: "mt-2 rounded-lg py-3 px-5 bg-gray-200 inline-block font-medium hover:bg-gray-300" %>
    <div class="inline-block ml-2">
      <%= button_to 'Destroy this note', note_path(@note), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-200 font-medium hover:bg-gray-300" %>
    </div>
  </div>
</div>
